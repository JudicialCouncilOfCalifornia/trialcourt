/**
 * Implements hook_views_query_alter().
 */
function jcc_elevated_custom_views_pre_view(ViewExecutable $view) {
  // Extend view query results as needed.
  // Site machine name from config directory
  $config_dir = Settings::get('config_sync_directory');
  $pattern = '/(?<=config-)(?s)(.*$)/';
  preg_match($pattern, $config_dir, $site);

  switch ($site[0]) {
    // If CJER site.
    case 'cjer':
      // Dom ID presence to avoid view duplicate.
      if ($view->dom_id) {
        switch ($view->id()) {
          case 'courses':
            $display = $view->current_display;

            switch ($display) {
              case 'all_toolkits':
              case 'toolkit_by_subject':
                // Merge media results with node results.
                $media_view = \Drupal::entityTypeManager()->getStorage('view')->load('courses_media')->getExecutable();
                if ($media_view) {
                  // If any filters.
                  $node_filters = [];
                  if ($display == 'toolkit_by_subject' && $view->args) {
                    $entity_type_manager = \Drupal::service('entity_type.manager');
                    $taxonomy_type_manager = $entity_type_manager->getStorage('taxonomy_term');
                    $term = $taxonomy_type_manager->loadByProperties(['vid' => 'subject_matter', 'name' => $view->args[0]]);
                    $node_filters[] = reset($term)->get('tid')->value;
                  }
                  parse_str($_SERVER['QUERY_STRING'], $filters);
                  if ($filters) {
                    foreach ($filters as $filter) {
                      $node_filters[] = strtolower($filter);
                    }
                  }

                  // Media view results.
                  $media_view->initDisplay();
                  $media_view->setDisplay('documents');
                  if ($node_filters) {
                    $media_view->setArguments($node_filters);
                  }
                  $media_view->execute();

                  if ($media_view->result) {
                    // If no node results, keep view alive for media results.
                    if (!$view->result) {
                      $view->execute();
                    }

                    // Merge media results with node results.
                    $view->result = array_merge($view->result, $media_view->result);
                  }
                }
                break;
            }
            break;
        }
      }
  }
}

/**
 * Helper function return site machine name.
 */
function __jcc_site_name() {
  $config_dir = Settings::get('config_sync_directory');
  $pattern = '/(?<=config-)(?s)(.*$)/';
  preg_match($pattern, $config_dir, $site);

  return $site[0];
}

/**
 * Helper function to deny access if not authenticated.
 */
function __jcc_restrict_to_authenticated() {
  $current_user = \Drupal::currentUser();
  $user_roles = $current_user->getRoles();
  if (!in_array('authenticated', $user_roles)) {
    return throw new AccessDeniedHttpException();
  }
}
