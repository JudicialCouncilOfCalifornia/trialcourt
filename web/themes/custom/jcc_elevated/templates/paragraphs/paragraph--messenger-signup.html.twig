{{ attach_library("jcc_storybook/Card") }}

{% set signup_form %}
  <div class="subscriptions">
    {% if not logged_in %}
      <div><a class="button" href="/user/register">Subscribe</a></div>
    {% else %}
      <div><a class="button" href="/user/{{ user.id }}/edit">Manage subscriptions</a></div>
    {% endif %}
  </div>
{% endset %}


{% include "@molecules/Card/Card.twig" with {
  variant: 'striped',
  background: 'solid-primary-dark-xx',
  media: signup_form,
  has_section_heading: false,
  text:  content,
} %}
