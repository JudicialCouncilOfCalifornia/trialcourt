{{ attach_library("jcc_storybook/Card") }}

{% set signup_form %}
  <div class="subscriptions frame">
    {% if not logged_in %}
      <div><a class="button button--secondary button--normal" href="/user/register">Subscribe</a></div>
    {% else %}
      <div><a class="button button--secondary button--normal" href="/user/{{ user.id }}/edit">Manage subscriptions</a></div>
    {% endif %}
  </div>
{% endset %}


<div class="container">
  {% include "@molecules/Card/Card.twig" with {
    variant: 'striped',
    background: 'solid-primary-dark-xx',
    media: content,
    aspect: [3,1],
    has_section_heading: false,
    text: signup_form,
  } %}
</div>
