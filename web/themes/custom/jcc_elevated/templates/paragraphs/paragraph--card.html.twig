{{ attach_library("jcc_storybook/Card") }}
{{ attach_library("jcc_storybook/Button") }}
{{ attach_library("jcc_storybook/Icon") }}

{# Card variant selection set by parent #}
{% set paragraph_parent = paragraph.getParentEntity() %}
{% if paragraph_parent.hasField('field_sub_variant') %}
  {% set cards_sub_variant = paragraph_parent.field_sub_variant.value|json_decode|default([]) %}
{% endif %}

{# Icon if in use for striped card #}
{% if cards_sub_variant.card == 'striped' and paragraph.field_icon.value %}
  {% set icon_data = {
    icon: paragraph.field_icon.value,
    color: false,
  } %}
{% endif %}

{# Button link if in use #}
{% if paragraph.field_link.get(0).getUrl() is not empty %}
  {% set href = paragraph.field_link.get(0).getUrl() %}
  {% if cards_sub_variant.card == 'striped' and paragraph.field_entire_card_clickable.value %}
    {% set href = paragraph.field_link.get(0).getUrl().toString() %}
  {% endif %}
  {% set button_data = {
    label: paragraph.field_link.title,
    href: href,
    variant: 'primary',
  } %}
{% endif %}

{% include "@molecules/Card/Card.twig" with {
  variant: cards_sub_variant.card,
  clickable_card: cards_sub_variant.card == 'striped' ? paragraph.field_entire_card_clickable.value : null,
  background: cards_sub_variant.card == 'striped' ? paragraph.field_background.value : null,
  media: cards_sub_variant.card != 'striped' ? media : false,
  media_caption: {
    show: paragraph.field_show_media_caption.value,
    text: caption,
  },
  heading: content.field_heading.0,
  text: filtered_text ?? content.field_text.0|render,
  button_data: button_data,
} %}
