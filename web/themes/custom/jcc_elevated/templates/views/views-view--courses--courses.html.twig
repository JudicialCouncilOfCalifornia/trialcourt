{% if results %}
  <table style="width:100%; margin-block-end:1.5rem;">
    <tr>
      <th>SUBJECT</th>
      <th>TITLE</th>
      <th>AUDIENCE</th>
    </tr>
    {% for course in results %}
      {% if course.audience == 'Judicial' %}
        {% set audience_color = '#6D3308' %}
      {% elseif course.audience == 'Everyone' %}
        {% set audience_color = '#228B22' %}
      {% endif %}
      <tr>
        <td {% if audience_color %}style="color:{{ audience_color }};"{% endif %}>{{ course.subject }}</td>
        <td {% if audience_color %}style="color:{{ audience_color }};"{% endif %}>{{ course.title }}</td>
        <td {% if audience_color %}style="color:{{ audience_color }};"{% endif %}>{% if course.audience %}{{ course.audience }}{% endif %}</td>
      </tr>
    {% endfor %}
  </table>
{% else %}
  <p>No toolkits found or you might not have permission to view.</p>
{% endif %}
