{#
/**
 * @file
 * Theme override for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 */
#}

{% set login %}
  <form{{ attributes.addClass(classes) }}>
    {{ children }}
    {% if user_login_display != 'replace' %}
      <p style="margin-block-start:var(--s5); font-size:var(--s1);">
        <strong>&mdash; Or log in with your Drupal account &mdash;</strong>
      </p>
    {% endif %}
  </form>
{% endset %}

{% include "@organisms/Section/Section.twig" with {
  sub_component_layout: 'stack',
  sub_component_data: login,
} %}
