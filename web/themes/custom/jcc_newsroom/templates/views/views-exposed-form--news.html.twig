{#
/**
 * @file
 * Theme override of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 */
#}
{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
{{ q }}
{% endif %}
<div class="grid-container-widescreen padding-top-4 region--exposed-filters">
  <div class="grid-row grid-gap-6 display-flex flex-row flex-align-stretch padding-x-2 radius-md">
    <div class="views--exposed-filters">
    {{ form }}
    </div>
  </div>
</div>
