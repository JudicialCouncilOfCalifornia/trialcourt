<div class="usa-alert usa-alert--{{ alert.type }} margin-top-0 padding-0 line-height-sans-1">
  <div class="usa-alert__body margin-y-0 margin-x-auto padding-y-105 padding-left-5 padding-right-205">
    <h3 class="usa-alert__heading margin-bottom-0 font-body-md text-bold">{{ alert.heading }},</h3>
    <div class="usa-alert__text font-body-sm">{{ alert.text }}</div>
    {% if alert.button %}
      <div class="jcc-alert__action">
        {# Use 'secondary' button style, unless explicitly provided. #}
        {% set button = alert.button|merge({
          style: alert.button.style|default('secondary')
        }) %}

        {% include "@atoms/buttons/link-button.twig" with {
          link_button: button
        } only %}
      </div>
    {% endif %}
  </div>
</div>
