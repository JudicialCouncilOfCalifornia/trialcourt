{#
/**
 * @file
 * Theme override of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 */
#}

<div class="jcc-content-stream-filtering-form">
  <div class="jcc-content-stream-filtering-form__filter">
    {{ form.search }}
  </div>

  <div class="usa-accordion">
    <h4 class="usa-accordion__heading">
      <button class="usa-accordion__button" aria-expanded="false" aria-controls="filters-wrapper">{{ 'Filters'|t }}</button>
    </h4>
    <div id="filters-wrapper" class="usa-accordion__content">
      <h3 class="jcc-content-stream-filtering-form__title">{{ 'Filter by type'|t }}</h3>
      <div class="jcc-content-stream-filtering-form__filter">
        {{ form.type }}
      </div>

      <h3 class="jcc-content-stream-filtering-form__title">{{ 'Filter by date'|t }}</h3>
      <div class="jcc-content-stream-filtering-form__filter">
        {{ form.date_start }}
        {{ form.date_end }}
      </div>

      {{ form|without('search', 'date_start', 'date_end', 'type') }}
    </div>
  </div>
</div>
