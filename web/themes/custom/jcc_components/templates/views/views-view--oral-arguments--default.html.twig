{% set cases %}
  {% for item in items %}
    <h2>{{ item[0].case.name }}</h2>
    {% if item[0].case.description %}
      {{ item[0].case.description|raw }}
    {% endif %}

    {% set docs = [] %}
    {% for doc in item %}
      {% set link = {
        url_title: doc.title,
        url: doc.url,
        aria_label: 'View or download document ' ~ doc.title,
        description: 'Filed on ' ~ doc.filing_date
      } %}
      {% set docs = docs|merge([link]) %}
    {% endfor %}

    {% include "@molecules/list/list.twig" with {
      list: {
        tag: 'ol',
        columns: 1,
        items: docs,
      }
    } %}
  {% endfor %}
{% endset %}

{% include "@molecules/section/section.twig" with {
  section: {
    spacing: 'top',
    content: cases,
    background: 'default',
  }
} %}
