{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% if not hide_was_this_helpful %}
  {% set dialog = {
    hero: {
      main: {
        icon: {
          name: 'like-dislike',
          set: 'fig',
          width: 55,
          height: 45,
        },
        title: 'Was this helpful?'|t,
        actions: [{
          text: 'Yes'|t,
          other_attributes: 'data-surveyvalue=yes'
        }, {
          text: 'No'|t,
          other_attributes: 'data-surveyvalue=no'
        }],
      },
    },
    embed: content,
  } %}

  {% set button = {
    text: 'Was this helpful?'|t,
    icon: {
      name: 'like-dislike',
      set: 'fig',
      width: 40,
      height: 22,
    },
    aria_label: "Submit feedback about this page",
  } %}
{% endif %}

{% include '@organisms/offcanvas/offcanvas.twig' with {
  offcanvas: {
    id: 'feedback-survey',
    dialog: dialog,
    button: button,
  }
} %}
