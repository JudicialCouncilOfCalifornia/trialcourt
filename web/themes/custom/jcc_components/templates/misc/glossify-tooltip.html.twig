{#
/**
 * @file
 * Markup for inline tooltips.
 *
 * Available variables:
 * - word: the text where the tooltips applies to.
 * - tip: the tooltip text.
 *
 *
 * @ingroup themeable
 */
#}
PLACEHOLDER glossify-tooltip.html.twig
{%- include '@atoms/tooltip/tooltip.twig' with {
  tooltip: {
    highlight: word,
    tool_text: tip
  }
} -%}

