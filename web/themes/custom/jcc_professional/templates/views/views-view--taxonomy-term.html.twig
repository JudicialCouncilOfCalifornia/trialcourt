{% extends 'themes/custom/jcc_components/templates/views/views-view--taxonomy-term.html.twig' %}

{% block taxonomy_description %}
  {% if rows.0['#rows'].0['#node'].field_document_type.0.entity.name.value == 'Oral Argument' and rows.0['#rows'].0['#node'].field_date_range.value %}
    {% set end_date = rows.0['#rows'].0['#node'].field_date_range.end_value ? ' to ' ~ rows.0['#rows'].0['#node'].field_date_range.end_value|date('F d, Y')  : '' %}
    <p>Hearing Date: {{ rows.0['#rows'].0['#node'].field_date_range.value|date('F d, Y') ~ end_date }}</p>
  {% endif %}
{% endblock %}

{% block search_result %}
  {% include "@templates/content-stream/content-stream-filtering.twig" with {
    content_stream_filtering: {
      background_color: 'alt',
      title: title,
      lead: lead,
      items: items,
      pager: pager,
    }
  } %}
{% endblock %}
